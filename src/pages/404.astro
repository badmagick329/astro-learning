---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout
  title="Page Not Found"
  description="The page you are looking for cannot be found"
>
  <main class="mt-8 flex min-h-screen flex-col items-center gap-8">
    <Navbar />

    <div class="flex flex-1 items-center justify-center p-8">
      <div
        class="bg-background w-full max-w-md rounded-2xl p-8 text-center shadow-xl"
      >
        <h1 class="text-primary mx-auto mb-2 text-6xl font-bold">404</h1>

        <p class="text-muted-foreground mb-6 text-lg">
          Sorry, the page you are looking for cannot be found.
        </p>
      </div>
    </div>
  </main>
</Layout>
